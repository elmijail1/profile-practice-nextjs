generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  hashedPassword String
  username       String   @default("newuser") @db.VarChar(20)
  name           String   @default("New User") @db.VarChar(20)
  emoji          String   @default("ðŸŽƒ") @db.VarChar(1)
  bgColor        Int[]    @default([0, 0, 95])
  joinedIn       DateTime @default(now())
  aboutMe        String?  @db.VarChar(100)
  friends        Int[]    @default([])
}
